<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="activity_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="layout_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:background">@drawable/rounded_layout</item>
    </style>

    <style name="button_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:orientation">horizontal</item>
   </style>

    <style name="button_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="medium_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/dimen_16dp</item>
        <item name="android:paddingVertical">@dimen/dimen_20dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="track_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">?attr/trackArtAndTimeColor</item>
    </style>

    <style name="error_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
    </style>

    <style name="error_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/dimen_100dp</item>
    </style>

    <style name="pl_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/dimen_24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="round_button">
        <item name="android:layout_width">@dimen/dimen_52dp</item>
        <item name="android:layout_height">@dimen/dimen_52dp</item>
        <item name="android:background">@drawable/round_layout</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="medium_text.main_track_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="track_info.player">
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
    </style>

    <style name="track_info.player.info">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>