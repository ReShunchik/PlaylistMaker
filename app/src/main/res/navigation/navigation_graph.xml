<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.ui.search.fragment.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment" />
    </fragment>

    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="com.example.playlistmaker.ui.mediaLibrary.fragment.MediaLibraryFragment"
        android:label="fragment_media_library"
        tools:layout="@layout/fragment_media_library" >
        <action
            android:id="@+id/action_mediaLibraryFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_createPlaylistFragment"
            app:destination="@id/createPlaylistFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_trackPlaylistFragment"
            app:destination="@id/trackPlaylistFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.ui.settings.fragment.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"/>

    <fragment
        android:id="@+id/audioPlayerFragment"
        android:name="com.example.playlistmaker.ui.audioPlayer.fragment.AudioPlayerFragment"
        android:label="fragment_audio_player"
        tools:layout="@layout/fragment_audio_player" >
        <action
            android:id="@+id/action_audioPlayerFragment_to_createPlaylistFragment"
            app:destination="@id/createPlaylistFragment" />
    </fragment>

    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.playlistmaker.ui.mediaLibrary.fragment.FavouriteFragment"
        android:label="FavouriteFragment"
        tools:layout="@layout/fragment_media_library_content"/>

    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.playlistmaker.ui.mediaLibrary.fragment.PlaylistFragment"
        android:label="PlaylistFragment"
        tools:layout="@layout/fragment_media_library_content"/>

    <fragment
        android:id="@+id/createPlaylistFragment"
        android:name="com.example.playlistmaker.ui.createPlaylist.fragment.CreatePlaylistFragment"
        android:label="CreatePlaylistFragment"
        tools:layout="@layout/fragment_create_playlist"/>

    <fragment
        android:id="@+id/trackPlaylistFragment"
        android:name="com.example.playlistmaker.ui.playList.fragment.TrackPlaylistFragment"
        android:label="TrackPlaylistFragment"
        tools:layout="@layout/fragment_playlist">
        <action
            android:id="@+id/action_trackPlaylistFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment" />
        <action
            android:id="@+id/action_trackPlaylistFragment_to_editPlaylistFragment"
            app:destination="@id/editPlaylistFragment" />
    </fragment>

    <fragment
        android:id="@+id/editPlaylistFragment"
        android:name="com.example.playlistmaker.ui.editPlaylist.fragment.EditPlaylistFragment"
        android:label="editPlaylistFragment"
        tools:layout="@layout/fragment_create_playlist"/>

</navigation>