<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/settings"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_color"
                android:fontFamily="@font/ys_display_regular"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/theme_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginBottom="@dimen/settings_text_margin_vertical"
                android:layout_marginTop="@dimen/settings_text_margin_vertical"
                android:text="@string/dark_theme"
                android:textSize="@dimen/settings_text_size"
                android:textColor="@color/text_color"
                android:fontFamily="@font/ys_display_regular"/>

            <Switch
                android:id="@+id/switch_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_gravity="center_vertical|right"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/share_app_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginBottom="@dimen/settings_text_margin_vertical"
                android:layout_marginTop="@dimen/settings_text_margin_vertical"
                android:text="@string/share_app"
                android:textSize="@dimen/settings_text_size"
                android:textColor="@color/text_color"
                android:fontFamily="@font/ys_display_regular"/>

            <ImageView
                android:id="@+id/icon_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/settins_icon_margin_right"
                android:src="@drawable/icon_share"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/email_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/email_support_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginBottom="@dimen/settings_text_margin_vertical"
                android:layout_marginTop="@dimen/settings_text_margin_vertical"
                android:text="@string/email_support"
                android:textSize="@dimen/settings_text_size"
                android:textColor="@color/text_color"
                android:fontFamily="@font/ys_display_regular"/>

            <ImageView
                android:id="@+id/icon_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/settins_icon_margin_right"
                android:src="@drawable/icon_support"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/user_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_agreement_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginBottom="@dimen/settings_text_margin_vertical"
                android:layout_marginTop="@dimen/settings_text_margin_vertical"
                android:text="@string/user_agreement"
                android:textSize="@dimen/settings_text_size"
                android:textColor="@color/text_color"
                android:fontFamily="@font/ys_display_regular"/>

            <ImageView
                android:id="@+id/icon_move_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/settins_icon_margin_right"
                android:src="@drawable/icon_move_on"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom">

        <FrameLayout
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_serach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_8dp"/>

            <TextView
                android:id="@+id/search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textColor="@color/text_color"
                android:fontFamily="@font/ys_display_regular"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_8dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/media_library_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/icon_media_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_media_library"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_8dp"/>

            <TextView
                android:id="@+id/media_library_button_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/media_library"
                android:textColor="@color/text_color"
                android:fontFamily="@font/ys_display_regular"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_8dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_settings"
                android:layout_marginTop="@dimen/margin_8dp"/>

            <TextView
                android:id="@+id/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="@color/text_color"
                android:fontFamily="@font/ys_display_regular"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_8dp"/>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>