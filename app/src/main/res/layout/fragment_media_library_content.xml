<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/bgColor"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_playlist"
            android:text="@string/new_playlist"
            app:cornerRadius = "@dimen/dimen_56dp"
            android:layout_marginBottom="@dimen/dimen_44dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            style="@style/pl_button"/>

        <ImageView
            android:src="@drawable/ic_no_results_120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/info"
            style="@style/error_text"
            android:layout_width="@dimen/dimen_312dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_16dp"/>

    </LinearLayout>

</LinearLayout>